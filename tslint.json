{
  /*
  * Possible values:
  * - the name of a built-in config
  * - the name of an NPM module which has a "main" file that exports a config object
  * - a relative path to a JSON file
  */
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "ordered-imports": false,
    "comment-format": false,
    "ban": false,
    "class-name": true,
    "curly": false,
    "forin": true,
    "interface-name": [false],
    "jsdoc-format": true,
    "label-position": true,
    "label-undefined": true,
    "member-access": false,  
    "no-any": false,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      false
    ],
    "no-construct": true,
    "no-constructor-vars": true,
    "no-debugger": true,
    "no-duplicate-key": true,
    "no-shadowed-variable": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unreachable": true,
    "no-unused-expression": true,
    "no-unused-variable": [true, "react"],
    "no-use-before-declare": false,
    "no-var-keyword": true,
    "no-var-requires": false,
    "object-literal-sort-keys": false, 
    "radix": true,
    "switch-default": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],

    "use-strict": [
      false,
      "check-module",
      "check-function"
    ],
    "variable-name": false,

    "jsx-no-multiline-js": false  
  },
  "rulesDirectory": [
    /*
    * A list of relative or absolute paths to directories that contain custom rules.
    * See the Custom Rules documentation below for more details.
    */
  ]
}