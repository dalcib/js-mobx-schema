{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "src",
    "rootDir": "app",
    "sourceMap": true,
    "lib": ["es6","DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "watch": true
  },
  "exclude": ["node_modules"]
}
