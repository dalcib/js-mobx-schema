{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "outDir": "src",
    "rootDir": "app",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "watch": true
  },
  "exclude": [
      "node_modules"
  ]
}