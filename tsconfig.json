{
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs", 
    "outDir": "src",
    "rootDir": "app",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    //"noImplicitUseStrict": true,
    //"preserveConstEnums": true,
    //"allowJs": true,
    //"noImplicitReturns": true,
    //"noImplicitThis": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "watch": true
  },
  "exclude": [
      "node_modules"
  ]
}